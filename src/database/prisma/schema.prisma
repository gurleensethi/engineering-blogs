datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Publication {
  id           String @id
  name         String
  blogName     String
  desecription String
  link         String
  posts        Post[]
}

model Post {
  guid          String      @id
  title         String
  desceription  String?
  pubDate       DateTime
  link          String
  publicationId String
  publication   Publication @relation(fields: [publicationId], references: [id])
}
