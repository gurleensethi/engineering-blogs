datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Publication {
  id              String            @id
  name            String
  blogName        String
  description     String
  link            String
  posts           Post[]
  UserPublication UserPublication[]
}

model Post {
  postId        String      @id
  guid          String
  title         String
  description   String?
  pubDate       DateTime
  link          String
  publicationId String
  imageUrl      String?
  publication   Publication @relation(fields: [publicationId], references: [id])
}

model User {
  id           Int               @id @default(autoincrement())
  firstName    String?
  lastName     String?
  username     String
  email        String            @unique
  createdAt    DateTime          @default(now())
  publications UserPublication[]
  role UserRole
}

model UserPublication {
  publication   Publication @relation(fields: [publicationId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
  publicationId String
  userId        Int

  @@id(fields: [userId, publicationId])
}

enum UserRole {
  USER
  ADMIN
}