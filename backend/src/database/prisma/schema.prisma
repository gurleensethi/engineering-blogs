datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Publication {
  id          String @id
  name        String
  blogName    String
  description String
  link        String
  posts       Post[]
}

model Post {
  postId        String      @id
  guid          String
  title         String
  description   String?
  pubDate       DateTime
  link          String
  publicationId String
  publication   Publication @relation(fields: [publicationId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastName  String?
  username  String
  email     String   @unique
  createdAt DateTime @default(now())
}
